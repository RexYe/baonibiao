
/**index.wxss**/
.wrap{
    width:100%;
    height: 1206rpx;
    box-sizing: border-box;
    background-color:#000;
    padding:20% 0;
}
.share {
    position:relative;
    width:100%;
    height: 100%;
    box-sizing: border-box;
    background-color:#e25d55;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 8rpx;
}

.userinfo-nickname {
    color: rgb(218, 179, 93);
    font-size:36rpx;
    position:relative;
}
.img{
    width:40rpx;
    height:40rpx;
    position:absolute;
    top:6rpx;
    left:368rpx;
}
.kouling{
    color: rgb(218, 179, 93);
    font-size:44rpx;
    font-weight:bold;
}
.code{
    width:100%;
    height:200rpx;
    line-height:200rpx;
    border-radius:50%;
    margin-top:40rpx;
    font-size:24rpx;
    position:relative;
}
.code-img{
    width:200rpx;
    height:200rpx;
    position:absolute;
    left:50%;
    margin-left:-100rpx;
}
.sbewm{
    font-size:24rpx;
    width:100%;
    position:absolute;
    text-align:center;
    bottom:50rpx;
}
.sbewm-cn{
    height:20rpx;
    color: rgb(218, 179, 93);
}
.sbewm-code{
    display:inline-block;
    width:128rpx;
    height:128rpx;
}
